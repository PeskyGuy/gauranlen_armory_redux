<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Dryad Stuff-->

<ThingDef ParentName="BuildingBase">
    <defName>SolarDryadPod</defName>
    <label>solar dryad pod</label>
    <description>Produces electricity from sunlight.</description>
    <thingClass>Building</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Misc/DryadSolarPod/DryadSolarPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <shadowData>
        <volume>(0.5,0.75,0.4)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
      <damageData>
        <rect>(0,0.6,0.5,2.8)</rect>
      </damageData>
    </graphicData>
    <building>
      <deconstructible>false</deconstructible>
    </building>
    <castEdgeShadows>false</castEdgeShadows>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.25</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(1,1)</size>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>Pesky.CompPowerPlantSolarDryad</compClass>
        <basePowerConsumption>-200</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="Pesky.CompProperties_SunkeeperTransformThing" />
      <li Class="CompProperties_Glower">
        <glowRadius>2</glowRadius>
        <glowColor>(248,163,41,0)</glowColor>
      </li>
    </comps>
    <uiOrder>2220</uiOrder>
    <designationHotKey>Misc5</designationHotKey>
    <constructEffect>ConstructMetal</constructEffect>
  </ThingDef>

<ThingDef ParentName="BuildingBase">
    <defName>BurdenEffigy</defName>
    <label>BurdenEffigy</label>
    <description>Slowly generates burdenweave, through a painful process of the half-living dryad shedding its own skin.</description>
    <graphicData>
      <texPath>Things/Building/Special/BurdenEffigy</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3, 3)</drawSize>
      <shadowData>
        <volume>(1.8, 1.0, 0.2)</volume>
        <offset>(0.0, 0.0, -0.4)</offset>
      </shadowData>
    </graphicData>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
    <costList>
      <Wood>200</Wood>
      <Steel>80</Steel>
      <ComponentDryad_Carrier>6</ComponentDryad_Carrier>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>100</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Spawner">
        <requiresPower>true</requiresPower>
        <thingToSpawn>BurdenweaveCloth</thingToSpawn>
        <spawnCount>75</spawnCount>
        <spawnIntervalRange><min>600000</min><max>600000</max></spawnIntervalRange>
        <writeTimeLeftToSpawn>true</writeTimeLeftToSpawn>
        <showMessageIfOwned>true</showMessageIfOwned>
      </li>
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MarketValue>1500</MarketValue>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>-10</Beauty>
      <Mass>35</Mass>
      <WorkToBuild>8000</WorkToBuild>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardCore</li>
    </thingSetMakerTags>
    <tickerType>Normal</tickerType>
    <size>(2, 2)</size>
    <fillPercent>1.0</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <passability>Impassable</passability>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <tradeability>Sellable</tradeability>
    <tradeTags>
      <li>ExoticBuilding</li>
    </tradeTags>
  </ThingDef>

<!-- Research Stuff -->

 <ThingDef ParentName="BuildingBase">
    <defName>Gau_Symbiont</defName>
    <label>gauranlen symbiont</label>
    <description>A half-dead immature dryad that attaches to a log and unlocks new dryadic technology, it speaks to you.</description>
    <graphicData>
      <texPath>Things/Building/Misc/GauSymbiont</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <uiIconScale>0.85</uiIconScale>
    <researchPrerequisites><li>Rootcraft</li></researchPrerequisites>
    <size>(1,1)</size>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <designationHotKey>Misc4</designationHotKey>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Mass>60</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <WoodLog>40</WoodLog>
      <Jade>20</Jade>
      <ComponentDryad_Basic>3</ComponentDryad_Basic>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.10</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
  </ThingDef>



</Defs>
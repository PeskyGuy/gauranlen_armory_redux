<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Rending Table -->

  <ThingDef ParentName="BenchBase">
    <defName>TableRending</defName>
    <label>rending table</label>
    <description>A work station for disassembling dryad corpses, or creating Rootcraft products.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/TableRending</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2.5,1.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-2</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <uiOrder>2520</uiOrder>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <recipes>
      <!-- Ideology Dryads -->
      <li>Make_ComponentDryadBasic</li>
      <li>Make_ComponentDryadCarrier</li>
      <li>Make_ComponentDryadBarkskin</li>
      <li>Make_ComponentDryadWoodmaker</li>
      <li>Make_ComponentDryadMedicinemaker</li>
      <li>Make_ComponentDryadGaumaker</li>
      
      <!-- My Dryads -->
      <li>Make_ComponentDryadSunkeeper</li>
      <li>Make_ComponentDryadFiremaker</li>
      <li>Make_ComponentDryadIronback</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">Make_ComponentDryadBloodmaker</li>
      <li MayRequire="Ludeon.RimWorld.Anomaly">Make_ComponentDryadFerritemaker</li>
      
      <!-- Vanilla Expanded Dryads -->
      <li MayRequire="vanillaexpanded.ideo.dryads">Make_ComponentDryadGaubricmaker</li>
      <li MayRequire="vanillaexpanded.ideo.dryads">Make_ComponentDryadStonedigger</li>
      <li MayRequire="vanillaexpanded.ideo.dryads">Make_ComponentDryadSpitter</li>
      <li MayRequire="vanillaexpanded.ideo.dryads">Make_ComponentDryadNectarmaker</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(251, 192, 147, 0)</glowColor>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <workTableRoomRole>Workshop</workTableRoomRole>
      <workTableNotInRoomRoleFactor>0.8</workTableNotInRoomRoleFactor>
    </building>
    <constructEffect>ConstructDirt</constructEffect>
    <researchPrerequisites>
      <li>Rootcraft</li>
    </researchPrerequisites>
    <designationHotKey>Misc7</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>

</Defs>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Sunkeeper Dryad -->

<RecipeDef>
    <defName>Make_ComponentDryadSunkeeper</defName>
    <label>make sunkeeper essence</label>
    <description>Make an sunkeeper essence.</description>
    <jobString>Making sunkeeper essence.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>10000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Corpse_Dryad_Sunkeeper</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Corpse_Dryad_Sunkeeper</li>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ComponentDryad_Sunkeeper>1</ComponentDryad_Sunkeeper>
    </products>
    <researchPrerequisite>Rootcraft</researchPrerequisite>
    <skillRequirements>
      <Crafting>6</Crafting>
      <Plants>8</Plants>
    </skillRequirements>
    <workSkill>Plants</workSkill>
    <displayPriority>10</displayPriority>
  </RecipeDef>


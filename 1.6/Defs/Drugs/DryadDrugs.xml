<Defs>

<!-- Carrier Dryad -->

<ThingDef ParentName="MakeableDrugBase">
    <defName>VigorTonic</defName>
    <label>vigor tonic</label>
    <description>A potion created from rendered carrier fat and leaves from the gauranlen tree, enhances a drinker's strength and speed with a mild potential for addiction.</description>
    <descriptionHyperlinks>
      <HediffDef>VigorTonicHigh</HediffDef>
      <HediffDef>VigorTonicAddiction</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/VigorTonic/VigorTonic</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>400</WorkToMake>
      <MarketValue>44</MarketValue>
      <Mass>0.1</Mass>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <joyKind>Chemical</joyKind>
      <joy>0.35</joy>
      <drugCategory>Hard</drugCategory>
      <foodType>Processed, Fluid</foodType>
      <baseIngestTicks>80</baseIngestTicks>
      <ingestSound>Ingest_Beer</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <useEatingSpeedStat>true</useEatingSpeedStat>
      <chairSearchRadius>0</chairSearchRadius>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>VigorTonicHigh</hediffDef>
          <severity>0.5</severity>
          <toleranceChemical>VigorTonic</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>0.4</offset>
          <toleranceChemical>VigorTonic</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetPsyfocus">
          <offset>0.15</offset>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>SpagyricAlchemy</researchPrerequisite>
      <recipeUsers>
        <li>GroveCrucible</li>
      </recipeUsers>
      <soundWorking>Recipe_Drug</soundWorking>
      <displayPriority>1520</displayPriority>
    </recipeMaker>
    <costList>
      <ComponentDryad_Carrier>3</ComponentDryad_Carrier>
      <PsychoidLeaves>20</PsychoidLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>VigorTonic</chemical>
        <addictiveness>0.014</addictiveness>
        <existingAddictionSeverityOffset>0.20</existingAddictionSeverityOffset>
        <needLevelOffset>0.8</needLevelOffset>
        <isCombatEnhancingDrug>true</isCombatEnhancingDrug>
        <listOrder>220</listOrder>
        <overdoseSeverityOffset>0.18~0.35</overdoseSeverityOffset>
        <largeOverdoseChance>0.005</largeOverdoseChance>
      </li>
    </comps>
  </ThingDef>

<HediffDef>
    <defName>VigorTonicHigh</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>high on vigor tonic</label>
    <labelNoun>a vigor tonic high</labelNoun>
    <description>Consumed vigor tonic. It enhances the user's muscle structure with concentrated dryadic sap.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.55</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
          <painFactor>0.3</painFactor>
        <statFactors>
          <MoveSpeed>1.75</MoveSpeed>
          <CarryingCapacity>2</CarryingCapacity>
        </statFactors>
          <capMods>
            <li>
              <capacity>Sight</capacity>
              <offset>0.15</offset>
            </li>
          </capMods>
        </li>
      </stages>
  </HediffDef>

<ThoughtDef>
    <defName>VigorTonicHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>VigorTonicHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>high on vigor tonic</label>
        <description>I feel the strength of the gauranlen flowing through me, I can carry anything.</description>
        <baseMoodEffect>7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

<ChemicalDef>
